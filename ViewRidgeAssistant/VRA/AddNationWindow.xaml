<Window x:Class="VRA.AddNationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Национальность" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Национальность:" Grid.Row="0" Grid.Column="0" Margin="3"/>

        <TextBox x:Name="tbNation" Grid.Row="0" Grid.Column="1" Margin="3"/>
        <Button x:Name="btnSave" Grid.Row="4" Grid.Column="0" Content="Сохранить" Margin="3" Click="btnSave_Click" />
        <Button x:Name="btnCancel" Grid.Row="4" Grid.Column="1" Content="Отмена" Margin="3" Click="btnCancel_Click" />

    </Grid>
</Window>
