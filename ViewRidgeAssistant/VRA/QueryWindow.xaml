<Window x:Class="VRA.QueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать запрос" MinHeight="500" MinWidth="600" Height="500" Width="600">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*" />
            <RowDefinition Height="210*" />
            <RowDefinition Height="32" />
            <RowDefinition Height="210*" />
            <RowDefinition Height="0*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0" />
            <ColumnDefinition Width="578*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Button Content="Выполнить" Name="btnQuery" Click="btnQuery_Click" Grid.Column="1" Grid.Row="2" />
        <TextBox Name="tbQuery" Grid.Row="1" Grid.Column="1" />
        <DataGrid AutoGenerateColumns="True" Name="dgResult" Grid.Row="3" Grid.Column="1" IsReadOnly="True" />
    </Grid>
</Window>
